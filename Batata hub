--[[
  Script: Mod Menu para Grow a Garden com Rayfield UI
  Adaptado para Roblox (Rayfield injectado)
  Autor: Copilot
--]]

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Lista de frutas permitidas
local fruits = {
    "watermeleon", "pumpink", "mushroom", "grape", "mango", "pepper",
    "cacao", "ember lily", "sugar apple", "burnding bud", "gigant picone", "elder Strawberry"
}

local scamPets = {
    "disco bee", "raccon", "dragonfly", "red fox", "spinossaruro", "kitsune"
}

-- Estados
local selectedFruit = nil
local farmToggle = false

local scamToggle = false
local scamSelectedPet = nil
local isBeingTraded = false

-- Funções fictícias para integração com o jogo
local function IsFruitInStock(fruit)
    -- Aqui você pode colocar checagem real do estoque, se possível
    return true
end

local function BuyFruit(fruit)
    Rayfield:Notify({
        Title = "Comprar Fruta",
        Content = "Comprando fruta: " .. fruit,
        Duration = 2,
        Image = nil
    })
    -- Adapte aqui para chamar a função real do jogo
end

local function ShowFakePetInTrade(pet)
    Rayfield:Notify({
        Title = "Trade Scam",
        Content = "Exibindo pet fake na troca: " .. pet,
        Duration = 2,
        Image = nil
    })
    -- Adapte aqui para manipular o trade real
end

-- Simula convite de troca (para testes)
local function SimularTrade()
    if scamToggle then
        isBeingTraded = true
        Rayfield:Notify({
            Title = "Convite de Troca",
            Content = "Você recebeu um convite de troca!",
            Duration = 2,
            Image = nil
        })
    end
end

-- Criação do Menu Rayfield
local Window = Rayfield:CreateWindow({
    Name = "Grow a Garden Mod Menu",
    LoadingTitle = "Grow a Garden Mod",
    LoadingSubtitle = "by Copilot",
    ConfigurationSaving = {
        Enabled = false
    },
    Discord = {
        Enabled = false
    },
    KeySystem = false
})

-- Aba Farm
local FarmTab = Window:CreateTab("Farm", 4483362458) -- Ícone opcional

FarmTab:CreateToggle({
    Name = "Ativar compra automática",
    CurrentValue = false,
    Callback = function(Value)
        farmToggle = Value
    end
})

FarmTab:CreateDropdown({
    Name = "Selecionar fruta",
    Options = fruits,
    CurrentOption = fruits[1],
    Callback = function(Option)
        selectedFruit = Option
    end
})

FarmTab:CreateButton({
    Name = "Comprar fruta selecionada",
    Callback = function()
        if farmToggle and selectedFruit and IsFruitInStock(selectedFruit) then
            BuyFruit(selectedFruit)
        else
            Rayfield:Notify({
                Title = "Aviso",
                Content = "Ative o farm e selecione uma fruta!",
                Duration = 2
            })
        end
    end
})

-- Aba Trade Scam
local ScamTab = Window:CreateTab("Trade Scam", 4483362458)

ScamTab:CreateToggle({
    Name = "Ativar Scam de Trade",
    CurrentValue = false,
    Callback = function(Value)
        scamToggle = Value
    end
})

ScamTab:CreateButton({
    Name = "Simular convite de troca",
    Callback = function()
        SimularTrade()
    end
})

ScamTab:CreateDropdown({
    Name = "Escolher pet fake",
    Options = scamPets,
    CurrentOption = scamPets[1],
    Callback = function(Option)
        scamSelectedPet = Option
    end
})

ScamTab:CreateButton({
    Name = "Exibir pet fake na troca",
    Callback = function()
        if scamToggle and isBeingTraded and scamSelectedPet then
            ShowFakePetInTrade(scamSelectedPet)
            isBeingTraded = false
        else
            Rayfield:Notify({
                Title = "Aviso",
                Content = "Ative o scam, simule convite e selecione pet!",
                Duration = 2
            })
        end
    end
})

-- Dica: Para rodar, cole este script no executor com Rayfield já carregado!
